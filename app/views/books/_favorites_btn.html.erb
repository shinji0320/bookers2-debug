 <% if book.favorited_by?(current_user) %>
    <p>
    <%= link_to book_favorites_path(book.id), {method: :delete, remote: true, id: "favorites_btn_#{book.id}"} do %>
        ♥<%= book.favorites.count %> いいね
    <% end %>
    </p>
    <% else %>
    <p>
    <%= link_to book_favorites_path(book.id), {method: :post, remote: true, id: "favorites_btn_#{book.id}"} do %>
        ♡<%= book.favorites.count %> いいね
    <% end %>
    </p>
<% end %>