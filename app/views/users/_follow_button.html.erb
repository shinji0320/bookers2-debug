<% unless current_user == user %>
  <% if current_user.following?(user) %>
    <%= form_with model:user, method: :delete, local:true do |f| %>
      <%= f.hidden_field :follow_id, value: user.id %>
      <%= f.submit 'Unfollow', class: 'btn btn-danger btn-block' %>
    <% end %>

  <% end %>
<% end %>